<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/identifier1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTV"
        android:hint="Name Goes Here"
        android:layout_alignTop="@+id/ageTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageTV"
        android:hint="Age Goes Here"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bioTV"
        android:layout_alignEnd="@+id/bioTV" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:maxHeight="20dp"
        android:layout_above="@+id/bioTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bioTV"
        android:hint="User Bio Will Get Displayed Here xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:lines="5"
        android:layout_above="@+id/dontFight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nah Man"
        android:id="@+id/dontFight"
        android:layout_alignParentBottom="true"
        android:onClick="swipe_left"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yo Let&apos;s Fight"
        android:id="@+id/fight"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bioTV"
        android:layout_alignEnd="@+id/bioTV"
        android:onClick="swipe_right"
        android:backgroundTint="#00FF00" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see all"
        android:id="@+id/viewAllUsersBtn"
        android:maxWidth="50dp"
        android:onClick="viewAllUsers"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nameTV"
        android:layout_toEndOf="@+id/nameTV" />

</RelativeLayout>
